@model Web.Models.ClientViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}

<div class="container-fluid">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-6 col-md-8 col-sm-12">
                <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a>Add new client</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html"><i class="icon-home"></i></a></li>
                    <li class="breadcrumb-item">Clients</li>
                    <li class="breadcrumb-item active"> Client details</li>
                </ul>
            </div>
            <div class="col-lg-6 col-md-4 col-sm-12 text-right">
                <div class="bh_chart hidden-xs">
                    <div class="float-left m-r-15">
                        <small>Visitors</small>
                        <h6 class="mb-0 mt-1"><i class="icon-user"></i> 1,784</h6>
                    </div>
                    <span class="bh_visitors float-right">2,5,1,8,3,6,7,5</span>
                </div>
                <div class="bh_chart hidden-sm">
                    <div class="float-left m-r-15">
                        <small>Visits</small>
                        <h6 class="mb-0 mt-1"><i class="icon-globe"></i> 325</h6>
                    </div>
                    <span class="bh_visits float-right">10,8,9,3,5,8,5</span>
                </div>
                <div class="bh_chart hidden-sm">
                    <div class="float-left m-r-15">
                        <small>Chats</small>
                        <h6 class="mb-0 mt-1"><i class="icon-bubbles"></i> 13</h6>
                    </div>
                    <span class="bh_chats float-right">1,8,5,6,2,4,3,2</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                    <div class="row clearfix">

                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.ClientID)
                                @Html.DisplayFor(model => model.ClientID)
                            </div>
                        </div>
                        <div class="col-sm-12">

                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.NomComplet.prenom)
                                @Html.DisplayFor(model => model.NomComplet.prenom)

                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.NomComplet.nom)
                                @Html.DisplayFor(model => model.NomComplet.nom)
                            </div>
                        </div>


                        <div class="col-sm-12">
                            <div class="form-group">

                                @Html.DisplayNameFor(model => model.Email)
                                @Html.DisplayFor(model => model.Email)
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="form-group">

                                @Html.DisplayNameFor(model => model.NumeroTel)
                                @Html.DisplayFor(model => model.NumeroTel)
                            </div>
                        </div>
                    </div>
                    }
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
                        @Html.ActionLink("Back to List", "Index")
                    </p>
                </div>
                    
</div>
</div>
</div>
</div>