@model Web.Models.DocumentViewModel


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    IEnumerable<Domain.Entities.Categorie> categorie = ViewData["Cat"] as IEnumerable<Domain.Entities.Categorie>;
    var id = ViewData["id"];

}


@using (Html.BeginForm("Create", "Document", new { idProject = id }, FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DocumentName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DocumentName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DocumentName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="file" name="file" id="file" />
            </div>
        </div>



        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Category</label>
                    <br />
                    <label class="fancy-radio">
                        <input type="radio" name="categorie" id="categorie" value="Image" required>
                        <span><i></i>Image</span>
                    </label>
                    <label class="fancy-radio">
                        <input type="radio" name="categorie" id="categorie" value="Document" required>
                        <span><i></i>Document</span>
                    </label>

                    <p id="error-radio"></p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                    @id
                </div>
            </div>
        </div>
    </div>

}


